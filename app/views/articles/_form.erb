<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-10">
            <%= render 'shared/errors', obj:@article %>
            <%= form_with(model: @article,class:"shadow rounded p-5 bg-success", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class:"col-2 text-white" %>
                    <div class="col-10">
                        <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of Article" %>        
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :description,class:"col-2 text-white " %>
                    <div class="col-10">
                        <%= f.text_area :description, row:10,class:"form-control shadow rounded", placeholder: "Description of Article" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= f.submit class:"mt-5 btn btn-outline-dark text-white" %>
                </div>
            <% end %>
        </div>
        
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]      
        </div>
    </div>
</div>
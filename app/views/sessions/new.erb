<h1 class="text-center mb-5">Log in</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class:"shadow rounded p-5 bg-success", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :email,class:"col-2 text-white " %>
                    <div class="col-10">
                        <%= f.email_field :email,class:"form-control shadow rounded", placeholder: "Enter your email" %>
                    </div>
                </div>
                <div class="form-group row">
                    <%= f.label :password,class:"col-2 text-white " %>
                    <div class="col-10">
                        <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Enter password" %>
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <%= f.submit "Log in", class:"mt-5 btn btn-outline-dark text-white" %>
                </div>
            <% end %>
        </div>
        
        <div class="col-xs-4 col-xs-offset-4">    
        </div>
    </div>
</div>